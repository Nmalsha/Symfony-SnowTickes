<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block stylesheets %}
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    />
    <script
      src="https://kit.fontawesome.com/15024a0798.js"
      crossorigin="anonymous"
    ></script>
    {% endblock %}
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">SnowTicks</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarColor01"
          aria-controls="navbarColor01"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link active" href="/"
                ><i class="fas fa-home"></i>Home
                <span class="visually-hidden">(current)</span>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/ticks"
                ><i class="fas fa-list"></i>Tickes</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login"
                ><i class="fas fa-sign-in-alt"></i>Connection</a
              >
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/signup"
                ><i class="fas fa-user-plus"></i>Inscription</a
              >
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container">{% block body %}{% endblock %}</div>

    {% block javascripts %} {% endblock %}
  </body>
</html>
