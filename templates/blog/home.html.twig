{% extends 'base.html.twig' %} {% block body %}
<div class="home-bg bg"></div>
<h3>HOME</h3>
<section class="tickes">
  <div class="container">
    <div class="row">
      {% for trick in tricks %}
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3 trick trickcard_style">
        <div class="card card_tricks md-3">
          {% for image in images %} {% if trick.id == image.Trick.id %}

          <img
            class="card-img-top margin"
            src="{{ asset('/images/'~ image.name) }}"
            alt="Trick image"
          />
          {% endif %} {% endfor %}
        </div>
        <div class="card-body">
          <h5 class="card-title">{{ trick.trickName }}</h5>
          <p class="card-text">{{ trick.description }}</p>
          <p class="card-text">{{ trick.categorie }}</p>
          <p class="card-text">
            Created on:{{ trick.createdOn | date('d/m/y') }} a
            {{ trick.createdOn | date('H:i') }} by
          </p>
          <a
            href="{{ path('tricks_show', { id: trick.id }) }}"
            class="btn btn-primary"
            >Lire</a
          >
          <br />
          {% if app.user %}
          <div>
            <a href="/trick/{{ trick.id }}/edit"><i class="fas fa-edit"></i></a>
            <a href=""><i class="fas fa-trash-alt"></i></a>
          </div>
          {% endif %}
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %}
