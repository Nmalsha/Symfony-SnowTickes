{% extends 'base.html.twig' %} {% block body %}
<div class="home-bg bg"></div>
<h3>HOME</h3>
<section class="tickes">
  <article>
    {% for trick in tricks %}

    <h3>{{ trick.trickName }}</h3>
    <div class="metadata">{{ trick.description }}</div>
    <div class="content">
      {% for image in images %} {% if trick.id == image.Trick.id %} {
      <pre>
  {{ dump(image.name) }}
</pre
      >
      }
      <img src="{{ image.name }}" alt="" />
      {% endif %} {% endfor %}
      <p>{{ trick.categorie }}</p>
      <br />

      <a
        href="{{ path('tricks_show', { id: trick.id }) }}"
        class="btn btn-primary"
        >Lire
      </a>
    </div>
  </article>
  {% endfor %}
</section>
{% endblock %}
