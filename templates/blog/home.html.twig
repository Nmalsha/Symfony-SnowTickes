{% extends 'base.html.twig' %} {% block body %}
<div class="home-bg bg"></div>
<button type="button" id="myBtn" onclick="topFunction()">
  <i class="fas fa-arrow-up"></i>
</button>
<h3>HOME</h3>
<section class="tickes">
  <div class="container">
    <div class="row">
      {% for trick in tricks %}
      <div class="col-xs-12 col-sm-12 col-md-6 col-lg-3 trick trickcard_style">
        <div class="card card_tricks md-3">
          {% for image in images %} {% if trick.id == image.Trick.id %} {% if
          image.name is not null %}
          <img
            class="card-img-top margin"
            src="{{ asset('/images/'~ image.name) }}"
            alt="Trick image"
          />
          {% endif %} {% endif %} {% endfor %}
        </div>

        <div class="card-body">
          <h5 class="card-title">{{ trick.trickName }}</h5>
          <p class="card-text">{{ trick.description }}</p>
          <p class="card-text">{{ trick.categorie }}</p>
          <p class="card-text">
            Created on:{{ trick.createdOn | date('d/m/y') }} a
            {{ trick.createdOn | date('H:i') }} by {{ trick.user.secondName }}
          </p>

          <a href="/trick/{{ trick.slug }}" class="btn btn-primary">Lire</a>

          <br />

          <div>
            {% if app.user %} {% if app.user.id == trick.user.id %}
            <a href="{{ path('trick_edit', { id: trick.id }) }}"
              ><i class="fas fa-edit"></i
            ></a>
            <a href="{{ path('trick_delete', { id: trick.id }) }}" trick-delete data-token="{{csrf_token('delete'~ trick.id)}}""
              ><i class="fas fa-trash-alt"></i
            ></a>
            {% endif %} {% endif %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>
{% endblock %} {% block javascripts %}
<script src="{{ asset('/js/button.js') }}"></script>
<script src="{{ asset('/js/trick.js')}}"></script>
{% endblock %}
