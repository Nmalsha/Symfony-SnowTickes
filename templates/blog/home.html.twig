{% extends 'base.html.twig' %} {% block body %}
<div class="home-bg bg"></div>
<h3>HOME</h3>
<section class="tickes">
  {% for trick in tricks %}
  <div class="card trickcard_style">
    {% for image in images %} {% if trick.id == image.Trick.id %}
    <pre>
      {{ dump(image.name) }}
    </pre>
    <img
      class="card-img-top"
      src="{{ asset('/images/'~ image.name) }}"
      alt="Trick image"
    />
    {% endif %} {% endfor %}
    <div class="card-body">
      <h5 class="card-title">{{ trick.trickName }}</h5>
      <p class="card-text">{{ trick.description }}</p>
      <p class="card-text">{{ trick.categorie }}</p>
      <a
        href="{{ path('tricks_show', { id: trick.id }) }}"
        class="btn btn-primary"
        >Lire</a
      >
      <br />
      <a href="/trick/{{ trick.id }}/edit"><i class="fas fa-edit"></i></a>
      <a href=""><i class="fas fa-trash-alt"></i></a>
    </div>
  </div>
  {% endfor %}
</section>
{% endblock %}
