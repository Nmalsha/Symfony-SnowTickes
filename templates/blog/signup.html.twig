{% extends 'base.html.twig' %} {% block body %}
<div class="container margin-top">
  <div class="row text-center">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="bg-light py-3 px-3">
        <h3 class="">Inscrivez vous</h3>
        <form action="/signup" method="POST">
          <div class="form-group">
            <label for="prenom"> Prénom</label>
            <input
              class="form-control"
              id="prenom"
              type="text"
              name="prenom"
              placeholder="Prénom"
              required=""
            />
          </div>
          <div class="form-group">
            <label for="nom"> Nom</label>
            <input
              class="form-control"
              id="nom"
              type="text"
              name="nom"
              placeholder="Nom"
              required=""
            />
          </div>
          <div class="form-group">
            <label for="email"> Address email</label>
            <input
              class="form-control"
              id="email"
              type="text"
              name="email"
              placeholder="Address email"
              required=""
            />
          </div>
          <div class="form-group">
            <label for="password1"> Mot de passe</label>
            <input
              class="form-control"
              id="password1"
              type="text"
              name="password1"
              placeholder="Mot de pass"
              required=""
            />
          </div>
          <div class="form-group">
            <label for="password2"> Confirmation de mot de passe</label>
            <input
              class="form-control"
              id="password2"
              type="text"
              name="password2"
              placeholder="Confirmez votre mot de passe"
              required=""
            />
          </div>
          <div class="form-group">
            <button class="btn btn-success" type="submit">Inscription</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
