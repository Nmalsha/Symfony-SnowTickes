{% extends 'base.html.twig' %} {% block body %}
<h3>profile</h3>
<div class="container">
  <div class="card">
    <div class="row">
      <div class="col-8">
        <div class="card-title m-3 h3">{{ user.secondName }}</div>
        <div class="card-text m-3">
          <p>Votre Address email :{{ user.email }}</p>
        </div>
      </div>

      <div class="col-4">
        {% if app.user.id == user.id %}
        <div class="form-group">
          {{ form_start(form) }}
          {{ form_row(form.profieImage) }}
          <button type="submit" class="btn btn-lg btn-primary m-3">
            Ajouter le profile image
          </button>
          {{ form_end(form) }}
        </div>

        {% endif %}
        <img
          class="img-thumbnail m-5 float-right user-profile"
          src="{{ asset('/images/'~ user.profieImage) }}"
          alt="profile image"
        />
      </div>
    </div>
  </div>
</div>

{% endblock %}
