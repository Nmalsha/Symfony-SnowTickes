{% extends 'base.html.twig' %} {% block body %}

<div class="container margin-top">
  <div class="row text-center">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="bg-light py-3 px-3">
        <form action="/login" method="POST">
          {% if error %}
          <div class="alert alert-danger">
            {{error.messageKey | trans (error.messageData,'srcurity')}}
          </div>
          {% endif %} {% if app.user %}
          <div class="mb-3">
            Vous étes connecté comme {{ app.user.username }},
            <a href="{{ path('app_logout') }}">Me déconncter</a>
          </div>
          {% endif %}

          <h3 class="">Connectez vous</h3>
          <div class="form-group">
            <label for="email"> Email</label>
            <input
              class="form-control"
              value="{{ last_username }}"
              id="email"
              type="text"
              name="username"
              placeholder="Address email"
              required=""
            />
          </div>
          <div class="form-group">
            <label for="password"> Mot de pass</label>
            <input
              class="form-control"
              id="password"
              type="text"
              name="password"
              placeholder="Mot de passe"
              required=""
            />
            <input type="hidden" name="_csrf_token" value="{{
              csrf_token("authenticate")
            }}">
          </div>

          <div class="form-group">
            <button class="btn btn-success" type="submit">Connect</button>
          </div>
          <div class="form-group">
            <a href="">Mot de passe oublié</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
